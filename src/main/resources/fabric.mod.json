{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",

  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "Evarika"
  ],
  "contact": {
    "homepage": "${homepage}",
    "sources": "${source}",
    "issues": "${issues}"
  },
  "license": "${mod_license}",
  "icon": "assets/template/icon.png",
  "environment": "*",

  "entrypoints": {
    "main": [
      "eva.template.TemplateMain"
    ],
    "client": [
      "eva.template.TemplateClient"
    ],
    "modmenu": [
      "eva.template.config.TemplateConfigScreen"
    ]
  },
  "mixins": [
    {
      "config": "template.mixins.json"
    }
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": ">=${minecraft_version_0} <${minecraft_version_1}",
    "java": ">=21",
    "fabric-api": "*"
  },
  "suggests": {

  },
  "recommends": {

  },
  "breaks": {
  },
  "custom": {
    "modmenu": {

    },
    "mc-publish": {
      "modrinth": "${modrinth}",
      "curseforge": "${curseforge}",
      "dependencies": [
        "template(recommended){modrinth:template}"
      ]
    }
  },
  "accessWidener": "template.accesswidener"
}
